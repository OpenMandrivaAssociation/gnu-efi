+  {
+    _sbat = .;
+    *(.sbat)
+    *(.sbat.*)
+  }
+  _esbat = .;
+  _sbat_size = . - _sbat;
 
   . = ALIGN(4096);
   .dynsym   : { *(.dynsym) }
diff -Naur gnu-efi-3.0.14/gnuefi/elf_x86_64_efi.lds gnu-efi-3.0.14.tpg/gnuefi/elf_x86_64_efi.lds
--- gnu-efi-3.0.14/gnuefi/elf_x86_64_efi.lds	2021-08-19 16:25:25.000000000 +0000
+++ gnu-efi-3.0.14.tpg/gnuefi/elf_x86_64_efi.lds	2021-10-22 10:18:50.361488240 +0000
@@ -62,6 +62,16 @@
     *(.rela.stab)
   }
   . = ALIGN(4096);
+  .sbat :
+  {
+    _sbat = .;
+    *(.sbat)
+    *(.sbat.*)
+  }
+  _esbat = .;
+  _sbat_size = . - _sbat;
+
+  . = ALIGN(4096);
   .dynsym   : { *(.dynsym) }
   . = ALIGN(4096);
   .dynstr   : { *(.dynstr) }

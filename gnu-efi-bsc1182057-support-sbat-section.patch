+++ gnu-efi-3.0.14.tpg/gnuefi/elf_arm_efi.lds	2021-10-22 10:18:02.371709975 +0000
@@ -46,6 +46,15 @@
   .rel.data : { *(.rel.data) *(.rel.data*) }
   _edata = .;
   _data_size = . - _etext;
+  . = ALIGN(4096);
